<% end %>

<%= form_with model: @book do |f| %>
  <div class = "newbook">
    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <label>Title</label>
      </div>
  
    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <%= f.text_field :title %>
      </div>
  </div>
  
  
  <div class = "newbook">
    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <label>Body</label>
      </div>
  
    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <%= f.text_area :body %>
      </div>
      <div class= "botan">
        <%= f.submit 'Update Book' %>
      </div>
  </div>
  
<% end %>

