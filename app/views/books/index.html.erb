<div class="flash">
    <p><%= flash[:notice] %></p>
</div>

<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

<!--rubyで一覧表示-->
<% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
        </tr>
    </tbody>

<% end %>

</table>
<h2>New book</h2>

<% if @book.errors.any? %>
  <div class ="error-text">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!--rubyで入力フォーム-->
<%= form_with model: @book,url: '/books', method: :post do |f| %>
  <div class = "newbook">
    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <label>Title</label>
      </div>

    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <%= f.text_field :title %>
      </div>
  </div>

  <div class = "newbook">
    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <label>Body</label>
      </div>

    <% if @book.errors.any? %>
      <div class = "newbook-error">
    <% end %>
        <%= f.text_area:body %>
      </div>
  </div>
    <!--rubyで送信ボタン-->
  <div class= "botan">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

